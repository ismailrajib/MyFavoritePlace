<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mohammedismail.myfavoriteplace.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amar Website"
        android:id="@+id/textView" />

    <Button
        android:text="Amar bichana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="69dp"
        android:background="@drawable/round_corner_button"
        android:drawableLeft="@mipmap/ic_launcher"
        android:id="@+id/button3" />

    <Button
        android:text="Saint Martin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/round_corner_button"
        android:id="@+id/saintmartin"
        android:drawableLeft="@drawable/kaku"
        android:layout_below="@+id/button3"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="IIUC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iiuc"
        android:background="@drawable/round_corner_button"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
